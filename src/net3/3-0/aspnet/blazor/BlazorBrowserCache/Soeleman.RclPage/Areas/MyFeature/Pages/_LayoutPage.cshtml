    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - Soeleman.RclPage
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
